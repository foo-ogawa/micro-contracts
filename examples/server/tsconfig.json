{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "paths": {
      "@project/contract/*": ["../packages/contract/*"],
      "@project/contract-published/*": ["../packages/contract-published/*"]
    },
    "baseUrl": "."
  },
  "include": ["src/**/*", "../packages/contract/**/*"],
  "exclude": ["node_modules", "dist"]
}

